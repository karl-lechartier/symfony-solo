        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th></th>
        </tr>
        {% for p in proprietaire %}
            <tr>
                <td>{{ p.nom }}</td>
                <td>{{ p.prenom }}</td>
                <td>
                    <a href="{{ path("app_proprietaires_modifier", {"id": p.id}) }}" class="btn btn-primary">modifier</a>
